$schema: "https://moonrepo.dev/schemas/tasks.json"

tasks:
  start:
    command: ng serve --configuration=$PROJECT_ENV
    args: ["$projectName"]
    preset: server
    toolchain: {{ frontend_toolchain }}
    deps:
      - ^:build
      - ^:start
      - ~:start.pre
    options:
      runFromWorkspaceRoot: true
      runDepsInParallel: false
      mergeArgs: prepend

