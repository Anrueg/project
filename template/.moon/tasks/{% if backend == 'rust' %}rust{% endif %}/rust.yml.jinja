$schema: "https://moonrepo.dev/schemas/tasks.json"
extends: file://../../../wizard/rust/tasks.yml

tasks:
  clean:
    command: cargo clean -p $projectName
    toolchain: rust
    options:
      runFromWorkspaceRoot: true
      cache: false

  clippy:
    command: cargo clippy --no-deps -p $projectName
    inputs:
      - "/Cargo.toml"
      - "/**/Cargo.toml"
      - "/**/*.rs"
    toolchain: rust
    options:
      runFromWorkspaceRoot: true
      mergeArgs: prepend
      internal: true
      mutex: clippy
  clippy-fix:
    extends: clippy

    args:
      - --fix
      - --allow-dirty

  fmt:
    command: fmt -p $projectName -- --emit files
    deps: [~:clippy-fix]
    inputs:
      - "/Cargo.toml"
      - "/**/Cargo.toml"
      - "/**/*.rs"
    options:
      runFromWorkspaceRoot: true
      internal: true
      mutex: rustfmt

  lint:
    command: noop
    deps: ["~:clippy", "~:eslint"]
    options:
      runDepsInParallel: false
      cache: false

  format:
    command: noop
    deps: ["~:fmt", "~:eslint-fix"]
    options:
      runDepsInParallel: false
      cache: false

